<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCovid19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COVID-19"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCasos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total infections : 2000"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvCovid19"
        app:layout_constraintTop_toBottomOf="@id/tvCovid19" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvRecuperados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recoveries : 10000"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvCovid19"
        app:layout_constraintTop_toBottomOf="@id/tvCasos" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvMuertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deaths : 500"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tvCovid19"
        app:layout_constraintTop_toBottomOf="@id/tvRecuperados" />

</androidx.constraintlayout.widget.ConstraintLayout>